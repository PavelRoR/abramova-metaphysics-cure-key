#plan
	width 100%
	padding 60px 0
	background-color: #010B23
	background-image url(../img/plan_bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.plan_general_title 
	color #ffffff
#course_plan
	width 100%
	max-width 650px
	margin 0 auto 40px
.course_plan_buttons
	width 100%
	text-align: center
	margin-bottom: 25px
	li
		width 100%
		max-width 130px
		display: inline-block
		font-family: "RubikBold", sans-serif;
		background-color: rgba(225,156,26, 1);
		height: 50px;
		line-height: 50px;
		color: #022a37
		text-align: center;
		margin 0 10px
		border-radius: 30px
		transition: all .5 ease
		a
			width: 100%
			height 100%
			display inline-block
			transition: all .5 ease
			color #081833
			&:focus
				// color #fff
				text-decoration: none
			&:hover
				// color #fff
				text-decoration: none
		&.ui-state-active
		&.ui-state-hover
			background-color: rgba(255, 178, 30, 1);
			a
				color #fff
.course_plan_container
	border-radius: 10px
	background-color #fff
	padding: 20px
	min-height 635px
.plan_module_title
	font-size: 22px
	font-family: "GilroyExtraBold", sans-serif;
	text-align: center
	margin-bottom: 20px
	span
		display block
		font-family: "GilroyLight", sans-serif;
.modules_container_days_title
	font-size: 18px
	font-family: "OpenSansBoldItalic", sans-serif;
	margin-bottom: 10px
	span
		font-family: "OpenSansItalic", sans-serif;
.modules_days_list
	li
		position relative
		padding-left: 10px
		margin-bottom: 10px
		list-style none
		&:before
			content ''
			position: absolute
			top 10px
			left 0
			width 5px
			height 5px
			border-radius: 50%
			background-color: #006282
.modules_days_buttons
	width 100%
	text-align: center
	margin-bottom: 15px
	li
		width 100%
		max-width 90px
		display: inline-block
		font-family: "OpenSansBoldItalic", sans-serif;
		background-color: #022a37
		height: 40px;
		line-height: 40px;
		text-align: center;
		margin 0 5px 10px
		border-radius: 30px
		transition: all .5 ease
		a
			width: 100%
			height 100%
			display inline-block
			transition: all .5 ease
			color: rgba(225,156,26, 1);
			&:focus
				text-decoration: none
			&:hover
				text-decoration: none
		&.ui-state-active
		&.ui-state-hover
			background-color: rgba(255, 178, 30, 1);
			a
				color #fff