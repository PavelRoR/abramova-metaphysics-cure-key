#main
	width 100%
	padding 0 0 90px
	overflow hidden
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: 0 0
	background-size: auto
	.container
		position relative
#main_container
	position relative
#blue_back
	position: absolute
	right: -470px;
	bottom: -60px
	width 1221px
	z-index: 0
#header
	padding: 29px 0
	overflow hidden
	z-index: 9
	position relative
#logo
	float: left
	width 165px
	height auto
#logo2
	display: none
	width 165px
	height auto
	margin 0 auto 10px
.contacts
	float: right
	text-align: right
	line-height  12px
	a
		&:focus
			text-decoration: none
		i
			color: #eec33f
			font-size: 21px
			margin: 0 9px 0 15px
			line-height: 15px
			line-height: 21px;
			vertical-align: middle;
		i+span
			line-height: 15px
			font-size: 15px;
			font-family: "GilroyLight", sans-serif;
			color: rgba(#fff, 1)
			text-align: right;
			&:hover
				text-decoration underline
.fa-phone
	transform: rotate(90deg)
.tel:first-child
	.fas-phone
		margin-left: 0
.pre
	font-family: "RubikBold", sans-serif;
	color: rgb(255, 178, 30);
	line-height: 1.3
	small 
		display block
.main_title
	font-size: 36px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(47, 59, 74);
	line-height: 1.089;
	width 100%
	max-width: 425px;
	margin 30px 0
	span
		font-family: "GilroyLight", sans-serif;
	small
		display block
		font-family: "GilroyLight", sans-serif;
		font-size: 50%
.main_date
	border: 1px solid #ffb21e
	border-radius: 28px
	width: 100%
	max-width 340px
	height 54px
	line-height 53px
	text-align: center
	padding 0 10px
	font-size: 22px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(47, 59, 74);
	color #2f3b4a
	span
		font-family: "GilroyLight", sans-serif;
.main_author
	font-size: 20px;
	font-family: "OpenSansBoldItalic", sans-serif;
	color: rgb(47, 59, 74);
	line-height: 1.361;
	margin-bottom: 20px
	span
		font-family: "OpenSansItalic", sans-serif;
.button_main
	position relative
	z-index: 29
	margin 60px 0 0