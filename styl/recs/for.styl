#for
	width 100%
	padding 360px 0 60px
	.container
		position relative
.for_pre_title
	position: absolute
	top -380px
	left 0
	right 0
	width 100%
	max-width 980px
	background-color: #00475d;
	background-image: url("../img/waves.png");
	background-position: center;
	margin 0 auto 40px
	color: #fff;
	font-size: 22px;
	font-family: "GilroyLight", sans-serif;
	border-radius: 10px
	padding 20px 30px
	text-align: center
	span
		font-family: "GilroyExtraBold", sans-serif;
.for_list
	width 100%
	max-width 650px
	margin 0 auto
	li
		list-style: none
		padding-left: 20px
		position relative
		margin-bottom: 15px
		font-size: 20px
		position relative
		&:before
			content ''
			position: absolute
			top 12px
			left 0
			width 7px
			height 7px
			border-radius: 50%
			background-color: #006282