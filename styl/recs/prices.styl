#prices
	width 100%
	padding 60px 0
	background-color: #173449;
	background-image: url("../img/waves.png");
.prices_general_title 
	color #fff
.prices_row
	width 100%
	max-width 750px
	margin 0 auto 40px
.price
	width 100%
	max-width 340px
	margin 0 auto
	background-color #fff
	border-radius: 5px
	box-shadow: 0px 6px 16.2px 1.8px rgba(3,2,2,0.38);
	border 2px solid #ffaf00
.price_head
	padding 20px
.price_head_title
	text-align: center
	font-size: 26px
	font-family: "RubikBold", sans-serif
	color #0b4e63;
.price_body
	border-top: 1px solid rgba(#ffaf00, .6)
	border-bottom: 1px solid rgba(#ffaf00, .6)
	padding 20px
	min-height 551px
.price_body_subtitle
	font-size: 20px
	text-align: center
	margin-bottom: 20px
	font-family: "GilroyExtraBold", sans-serif;
	small
		display block
.price_body_list
	li
		position relative
		z-index 9
		padding-left: 20px
		font-size: 16px;
		font-family: "GilroyLight", sans-serif;
		color: rgb(15, 36, 50);
		line-height: 1.3;
		margin-bottom: 10px
		list-style none
		&:last-child
			margin-bottom: 0
		&:before
			content: ''
			position: absolute
			top: 7px;
			left: 4px;
			border-radius: 50%;
			background-color: rgb(11, 78, 99);
			width: 7px;
			height: 7px;
.price_footer
	padding 20px
	text-align: center
.cost
	margin-bottom: 20px
	font-size: 24px
	font-family: "GilroyLight", sans-serif;
	span
		font-family: "GilroyExtraBold";
		display block
.cost_full
	span
		text-decoration: line-through
.cost_sale
	color red
.cost_today
	margin-bottom: 40px
	color #008500
.price_button
	animation: pulse
	animation-fill-mode: both;
	animation-duration: 3s;
	animation-timing-function: ease-in-out;
	animation-iteration-count: infinite;
	&:hover
		animation-play-state: paused
@keyframes pulse
	0%
		transform: scale(1)
	50%
		transform: scale(1.05)
	100%
.price_button_2
	animation-delay: 1s
.prepayment
	width 100%
	max-width 650px
	margin 0 auto
	text-align: center
.prepaymant_title
	font-size: 32px
	font-family: "RubikBold", sans-serif
	color red
.prepayment_text
	font-size:   20px
	color #fff
	font-family: "Rubik", sans-serif
	margin 15px 0 35px
.timer_title
	font-size: 32px
	text-align: center
	color #ffffff
	margin: 60px 0 20px
	font-family: "GilroyExtraBold",sans-serif
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 40px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 24px;
	font-family: 'OpenSansItalic', sans-serif
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #ffb21e
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #ffb21e
	text-shadow: 2px 2px 2px rgba(#022a37,.6);