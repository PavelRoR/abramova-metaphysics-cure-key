#videos
	width 100%
	padding 60px 0
#videos_container
	width 100%
	max-width 650px
	margin 0 auto 40px
.videos_container_buttons
	width 100%
	text-align: center
	margin-bottom: 20px
	li
		display: inline-block
		width 100%
		max-width 130px
		margin 0 10px
		font-family: "OpenSansBoldItalic", sans-serif;
		background-color: #022a37
		height: 40px;
		line-height: 40px;
		text-align: center;
		border-radius: 30px
		transition: all .5 ease
		a
			width: 100%
			height 100%
			display inline-block
			transition: all .5 ease
			color: rgba(225,156,26, 1);
			&:focus
				text-decoration: none
			&:hover
				text-decoration: none
		&.ui-state-active
		&.ui-state-hover
			background-color: rgba(255, 178, 30, 1);
			a
				color #fff
.videos_day_container
	padding 20px
	background-color #fff
	border-radius: 5px
	box-shadow: 0px 6px 10px 2px rgba(3,2,2,0.13);
	border 2px solid #ffaf00
.videos_day_title
	text-align: center
	font-size: 20px
	font-family: 'GilroyExtraBold', sans-serif
	margin-bottom: 15px
.videos_day_text
	padding-top: 10px
	font-size: 18px
.buy_recs_text
	text-align: center
	font-size: 22px
.buy_recs_button
	margin 15px auto 60px
#fb
#vk
	box-shadow: 0px 1px 11.83px 1.17px rgba(0,0,0,0.1);